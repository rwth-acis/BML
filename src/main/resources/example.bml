Bot(url="localhost:8080") {

    OpenAPI petStore(url="https://petstore3.swagger.io/api/v3/openapi.json")

    Number availablePetCounter()

    @Routine(rate="1h")
    updateAvailablePetCounter(data) {
        pet = petStore.get(path="/pet/{petId}", petId=id)
        if pet.status == "available" {
            availablePetCounter += 1
        }
    }
}
